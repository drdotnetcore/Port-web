@page
@model Port_web.Pages.Categories.IndexModel
@{
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-3">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-3">
            <a asp-page="/Categories/Create" class="btn btn-primary">Create</a>
        </div>
    </div>
    <br /><br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var objCat in Model.Categories)
            {
                <tr>
                    <td width="50%">@objCat.Name</td>
                    <td width="50%">@objCat.DisplayOrder</td>
                </tr>
            }
        </tbody>
    </table>
    
</div>
